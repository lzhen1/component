<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <com.lzhen.richradio.RichRadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="horizontal"
        android:visibility="visible"
        app:checkedId="@+id/radio1">

        <com.lzhen.richradio.RichRadio
            android:id="@+id/radio1"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginEnd="20dp"
            app:checked_color="@android:color/holo_red_dark"
            app:icon_check_position="right_top"
            app:stroke_width="3"
            app:radius="10dp"
            app:text="111"
            app:unchecked_color="@android:color/black" />

        <com.lzhen.richradio.RichRadio
            android:id="@+id/radio2"
            android:layout_width="80dp"
            android:layout_height="40dp"
            app:checked_color="@android:color/holo_red_dark"
            app:icon_check_position="right_top"
            app:stroke_width="3"
            app:radius="10dp"
            app:text="222"
            app:unchecked_color="@android:color/black" />
    </com.lzhen.richradio.RichRadioGroup>
</LinearLayout>